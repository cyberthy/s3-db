{
  "name": "@cyberthy/s3-db",
  "version": "1.0.0",
  "description": "An AWS S3 NoSQL database 'ORM'",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --config jestconfig.json --passWithNoTests",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "publishConfig": {
    "@cyberthy:registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyberthy/s3-db.git"
  },
  "author": "cyberthy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cyberthy/s3-db/issues"
  },
  "homepage": "https://github.com/cyberthy/s3-db#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  }
}
