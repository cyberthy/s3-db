{
  "name": "@cyberthy/s3-db",
  "version": "2.0.0",
  "description": "An AWS S3 NoSQL database 'ORM'",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json --passWithNoTests",
    "build": "tsc",
    "dev": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "husky install && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "changelog": "generate-changelog",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags"
  },
  "publishConfig": {
    "@cyberthy:registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyberthy/s3-db.git"
  },
  "author": "cyberthy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cyberthy/s3-db/issues"
  },
  "homepage": "https://github.com/cyberthy/s3-db#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/uuid": "^8.3.4",
    "generate-changelog": "^1.8.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.58.0",
    "crypto": "^1.0.1",
    "joi": "^17.6.0",
    "uuid": "^8.3.2"
  }
}
